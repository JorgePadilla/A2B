<p id="notice"><%= notice %></p>

<h1>Trips</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>User_image</th>
      <th>Origin</th>
      <th>Destiny</th>
      <th>Start date</th>
      <th>Start time</th>
      <th>End date</th>
      <th>End time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.user.name %></td>
        <td><%= image_tag current_user.gravatar_url(:size =>128, :secure => true) %></td>
        <td><%= trip.origin %></td>
        <td><%= trip.destiny %></td>
        <td><%= trip.start_date %></td>
        <td><%= trip.start_time %></td>
        <td><%= trip.end_date %></td>
        <td><%= trip.end_time %></td>
        <td><%= link_to 'Show', trip %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
        <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

