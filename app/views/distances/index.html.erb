<p id="notice"><%= notice %></p>

<h1>Distances</h1>

<table>
  <thead>
    <tr>
      <th>Origin city</th>
      <th>Destiny city</th>
      <th>Km</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @distances.each do |distance| %>
      <tr>
        <td><%= distance.origin_city.name %></td>
        <td><%= distance.destiny_city.name %></td>
        <td><%= distance.km %></td>
        <td><%= distance.price %></td>
        <td><%= link_to 'Show', distance %></td>
        <td><%= link_to 'Edit', edit_distance_path(distance) %></td>
        <td><%= link_to 'Destroy', distance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

